.nav { 
    max-width: 1200px; 
    margin: 0 auto; 
    display: flex; 
    align-items: center; 
    justify-content: space-between; 
    padding: 16px 24px; 
}

.logo { 
    font-weight: 700; 
    font-size: 20px;
    color: var(--text); 
    text-decoration: none; 
    transition: var(--transition);
