---
import Layout from '../layouts/Layout.astro';

const title = "Спасибо за оплату | Алеся Такун — психолог";
const description = "Оплата прошла успешно. Свяжитесь с Алесей Такун в Telegram для выбора времени консультации.";

// Получаем параметры из URL для отображения статуса платежа
const url = Astro.url;
const orderId = url.searchParams.get('orderId');
const status = url.searchParams.get('status');
const amount = url.searchParams.get('amount');
---

<Layout title={title} description={description}>
    <div class="thanks-container">
        <div class="thanks-content">
            <div class="success-icon">
                <svg width="80" height="80" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="12" cy="12" r="10" fill="#10B981" stroke="#10B981" stroke-width="2"/>
                    <path d="M9 12l2 2 4-4" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>
            
            <h1>Спасибо за оплату!</h1>
            <p class="thanks-message">Ваш платеж успешно обработан. Мы получили подтверждение и свяжемся с вами в ближайшее время.</p>
            
            {orderId && (
                <div class="payment-info">
                    <h3>Детали платежа:</h3>
                    <div class="payment-details">
                        <div class="detail-item">
                            <span class="label">Номер заказа:</span>
                            <span class="value">{orderId}</span>
                        </div>
                        {amount && (
                            <div class="detail-item">
                                <span class="label">Сумма:</span>
                                <span class="value">{amount} BYN</span>
                            </div>
                        )}
                        {status && (
                            <div class="detail-item">
                                <span class="label">Статус:</span>
                                <span class="value status-{status}">{status === 'success' ? 'Успешно' : status}</span>
                            </div>
                        )}
                    </div>
                </div>
            )}
            
            <div class="next-steps">
                <h2>Что дальше?</h2>
                <ol class="steps-list">
                    <li>
                        <strong>Свяжитесь со мной в Telegram:</strong>
                        <a href="https://t.me/alesiatakun" target="_blank" class="telegram-link">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
                            </svg>
                            @alesiatakun
                        </a>
                    </li>
                    <li><strong>Выберите удобное время</strong> для консультации</li>
                    <li><strong>Получите подтверждение</strong> и детали встречи</li>
                </ol>
            </div>
            
            <div class="contact-info">
                <h3>Дополнительные способы связи:</h3>
                <div class="contact-methods">
                    <a href="tel:+375293078342" class="contact-method">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                        </svg>
                        +375 29 307 83 42
                    </a>
                    <a href="mailto:alessia-sia@mail.ru" class="contact-method">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                        </svg>
                        alessia-sia@mail.ru
                    </a>
                </div>
            </div>
            
            <div class="actions">
                <a href="/" class="btn btn-primary">Вернуться на главную</a>
                <a href="/payments/" class="btn btn-secondary">Еще одна оплата</a>
            </div>
        </div>
    </div>
</Layout>

<style>
.thanks-container {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
}

.thanks-content {
    max-width: 600px;
    text-align: center;
    background: var(--bg-alt);
    padding: 40px;
    border-radius: var(--radius);
    border: 1px solid var(--border);
    box-shadow: var(--shadow-lg);
}

.success-icon {
    margin-bottom: 24px;
}

.thanks-content h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text);
    margin: 0 0 16px 0;
}

.thanks-message {
    font-size: 1.2rem;
    color: var(--text-light);
    margin-bottom: 32px;
    line-height: 1.6;
}

.payment-info {
    background: var(--bg);
    padding: 24px;
    border-radius: var(--radius);
    border: 1px solid var(--border);
    margin: 24px 0;
    text-align: left;
}

.payment-info h3 {
    font-size: 1.25rem;
    color: var(--text);
    margin: 0 0 16px 0;
    text-align: center;
}

.payment-details {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.detail-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 0;
    border-bottom: 1px solid var(--border);
}

.detail-item:last-child {
    border-bottom: none;
}

.detail-item .label {
    font-weight: 600;
    color: var(--text-light);
}

.detail-item .value {
    font-weight: 700;
    color: var(--text);
}

.detail-item .value.status-success {
    color: #10B981;
}

.detail-item .value.status-fail {
    color: #EF4444;
}

.next-steps {
    background: var(--bg);
    padding: 24px;
    border-radius: var(--radius);
    border: 1px solid var(--border);
    margin: 32px 0;
    text-align: left;
}

.next-steps h2 {
    font-size: 1.5rem;
    color: var(--text);
    margin: 0 0 20px 0;
    text-align: center;
}

.steps-list {
    list-style: none;
    padding: 0;
    margin: 0;
    counter-reset: step-counter;
}

.steps-list li {
    position: relative;
    padding-left: 40px;
    margin-bottom: 20px;
    color: var(--text-light);
    line-height: 1.6;
    counter-increment: step-counter;
}

.steps-list li::before {
    content: counter(step-counter);
    position: absolute;
    left: 0;
    top: 0;
    background: var(--accent);
    color: white;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
    font-weight: 600;
}

.telegram-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--accent);
    text-decoration: none;
    font-weight: 600;
    margin-top: 8px;
    padding: 8px 16px;
    background: rgba(99, 102, 241, 0.1);
    border-radius: var(--radius-sm);
    transition: var(--transition);
}

.telegram-link:hover {
    background: var(--accent);
    color: white;
    transform: translateY(-1px);
}

.contact-info {
    margin: 32px 0;
    padding: 24px;
    background: var(--bg);
    border-radius: var(--radius);
    border: 1px solid var(--border);
}

.contact-info h3 {
    font-size: 1.25rem;
    color: var(--text);
    margin: 0 0 16px 0;
}

.contact-methods {
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: center;
}

.contact-method {
    display: flex;
    align-items: center;
    gap: 12px;
    color: var(--text-light);
    text-decoration: none;
    padding: 12px 20px;
    background: var(--bg-alt);
    border-radius: var(--radius-sm);
    transition: var(--transition);
    min-width: 200px;
    justify-content: center;
}

.contact-method:hover {
    background: var(--accent);
    color: white;
    transform: translateY(-1px);
}

.actions {
    display: flex;
    gap: 16px;
    justify-content: center;
    margin-top: 32px;
}

.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    border-radius: var(--radius);
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: var(--transition);
    border: none;
    cursor: pointer;
}

.btn-primary {
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
    color: white;
    box-shadow: var(--shadow);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

.btn-secondary {
    background: var(--bg);
    color: var(--text);
    border: 2px solid var(--border);
}

.btn-secondary:hover {
    background: var(--bg-alt);
    border-color: var(--accent);
    transform: translateY(-1px);
}

@media (max-width: 768px) {
    .thanks-content {
        padding: 24px 20px;
    }
    
    .thanks-content h1 {
        font-size: 2rem;
    }
    
    .thanks-message {
        font-size: 1.1rem;
    }
    
    .actions {
        flex-direction: column;
        align-items: stretch;
    }
    
    .btn {
        width: 100%;
        max-width: none;
        min-height: 48px;
        touch-action: manipulation;
    }
    
    .contact-methods {
        align-items: stretch;
    }
    
    .contact-method {
        min-width: auto;
        width: 100%;
    }
}
</style>
