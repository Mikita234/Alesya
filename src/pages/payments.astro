<script>
function handlePaymentSubmit(event) {
    event.preventDefault();
    const amountInput = document.getElementById('amount-input');
    const amount = amountInput.value;
    
    if (!amount || amount < 1) {
        alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –∫–æ—Ä—Ä–µ–∫—Ç–Ω—É—é —Å—É–º–º—É');
        return;
    }
    
    // –ü–æ–ª—É—á–∞–µ–º –ø–∞—Ä–∞–º–µ—Ç—Ä—ã –∏–∑ URL
    const urlParams = new URLSearchParams(window.location.search);
    const successUrl = urlParams.get('success_url') || `${window.location.origin}/thanks/`;
    const cancelUrl = urlParams.get('cancel_url') || `${window.location.origin}?status=cancel`;
    const returnUrl = urlParams.get('return_url') || successUrl;
    
    // –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º —É–Ω–∏–∫–∞–ª—å–Ω—ã–π –Ω–æ–º–µ—Ä –∑–∞–∫–∞–∑–∞
    const orderId = 'ORDER_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
    
    // –ü–∞—Ä–∞–º–µ—Ç—Ä—ã –¥–ª—è –ê–ª—å—Ñ–∞-–ë–∞–Ω–∫ —ç–∫–≤–∞–π—Ä–∏–Ω–≥–∞
    const paymentParams = {
        amount: amount,
        currency: 'BYN',
        order_id: orderId,
        description: `–ö–æ–Ω—Å—É–ª—å—Ç–∞—Ü–∏—è –ø—Å–∏—Ö–æ–ª–æ–≥–∞ - ${amount} BYN`,
        success_url: successUrl,
        cancel_url: cancelUrl,
        return_url: returnUrl,
        merchant_id: 'YOUR_MERCHANT_ID', // –ó–∞–º–µ–Ω–∏—Ç—å –Ω–∞ —Ä–µ–∞–ª—å–Ω—ã–π ID –º–µ—Ä—á–∞–Ω—Ç–∞
        signature: 'YOUR_SIGNATURE' // –ó–∞–º–µ–Ω–∏—Ç—å –Ω–∞ —Ä–µ–∞–ª—å–Ω—É—é –ø–æ–¥–ø–∏—Å—å
    };
    
    // URL –¥–ª—è —Ä–µ–¥–∏—Ä–µ–∫—Ç–∞ –Ω–∞ –ø–ª–∞—Ç–µ–∂–Ω—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É –ê–ª—å—Ñ–∞-–ë–∞–Ω–∫–∞
    const paymentUrl = `https://pay.alfabank.by/payment/merchants/YOUR_MERCHANT_ID/payment_ru.html?` + 
        Object.keys(paymentParams).map(key => `${key}=${encodeURIComponent(paymentParams[key])}`).join('&');
    
    // –ü–æ–∫–∞ —á—Ç–æ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é, –ø–æ—Å–ª–µ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è - —Ä–µ–¥–∏—Ä–µ–∫—Ç
    if (paymentParams.merchant_id === 'YOUR_MERCHANT_ID') {
        alert(`–ì–æ—Ç–æ–≤–æ –∫ –∏–Ω—Ç–µ–≥—Ä–∞—Ü–∏–∏ —Å –ê–ª—å—Ñ–∞-–ë–∞–Ω–∫!\n\n–°—É–º–º–∞: ${amount} BYN\n–ù–æ–º–µ—Ä –∑–∞–∫–∞–∑–∞: ${orderId}\n\n–ü–æ—Å–ª–µ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è –º–µ—Ä—á–∞–Ω—Ç–∞ –±—É–¥–µ—Ç —Ä–µ–¥–∏—Ä–µ–∫—Ç –Ω–∞: ${paymentUrl}\n\n–°–≤—è–∂–∏—Ç–µ—Å—å —Å @alesiatakun –≤ Telegram –¥–ª—è —É—Ç–æ—á–Ω–µ–Ω–∏—è –¥–µ—Ç–∞–ª–µ–π.`);
    } else {
        // –†–µ–¥–∏—Ä–µ–∫—Ç –Ω–∞ –ø–ª–∞—Ç–µ–∂–Ω—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É
        window.location.href = paymentUrl;
    }
}

document.addEventListener('DOMContentLoaded', function() {
    const amountInput = document.getElementById('amount-input');
    const quickButtons = document.querySelectorAll('.btn-quick');
    
    // –ü–æ–ª—É—á–∞–µ–º —Å—É–º–º—É –∏–∑ URL –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤
    const urlParams = new URLSearchParams(window.location.search);
    const amountFromUrl = urlParams.get('amount');
    
    if (amountFromUrl && amountInput) {
        amountInput.value = amountFromUrl;
    }
    
    quickButtons.forEach(button => {
        button.addEventListener('click', function() {
            const amount = this.dataset.amount;
            amountInput.value = amount;
            
            // –ü–æ–¥—Å–≤–µ—Ç–∫–∞ –∞–∫—Ç–∏–≤–Ω–æ–π –∫–Ω–æ–ø–∫–∏
            quickButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');
        });
    });
});
</script>

