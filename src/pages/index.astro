    font-size: 1.2rem; 
    font-weight: 600; 
    color: var(--text-light); 
    margin-bottom: 16px; 
    line-height: 1.5;
}
.lede { font-size: clamp(1.05rem, 2vw, 1.2rem); color: var(--text-light); margin: 0 0 24px 0; line-height: 1.7; }

.hero-content p { 
    font-size: 1.1rem; 
    color: var(--text-light); 
    margin-bottom: 32px; 
    line-height: 1.7;
}

