/* Process lists */
.process-list {
    list-style: none;
    padding: 0;
    margin: 16px 0;
    counter-reset: step-counter;
}

.process-list li {
    position: relative;
    padding-left: 44px;
    margin: 16px 0;
    color: var(--text-light);
    line-height: 1.7;
    counter-increment: step-counter;
}

.process-list li::before {
    content: counter(step-counter);
    position: absolute;
    left: 0;
    top: 0;
    background: var(--accent);
    color: white;
    width: 26px;
    height: 26px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.85rem;
    font-weight: 700;
}

.process-list li:not(:last-child)::after{
    content: "";
    position: absolute;
    left: 12px;
    top: 26px;
    bottom: -12px;
    width: 2px;
    background: var(--border);
}

.section:last-child { border-bottom: none; }

/* OVERRIDE: семантические шаги в двух секциях (.process-list.steps)
   — Desktop/Tablet/Mobile едино: 2 колонки 28px | 1fr, без внутреннего padding слева.
   — Линия рисуется абсолютом внутри гаттера, не влияет на ширину текста. */
.process-list.steps { 
    list-style: none !important; 
    padding-left: 0 !important; 
    margin: 0 !important; 
    counter-reset: step; 
}
.process-list.steps li { 
    display: grid !important; 
    grid-template-columns: 28px 1fr !important; 
    column-gap: 12px !important; /* добавляем отступ между цифрой и текстом */
    align-items: start; 
    margin: 14px 0 !important; 
    line-height: 1.6; 
    position: relative; 
    padding-left: 0 !important; /* переопределяем базовый .process-list */
    padding: 0 !important; /* сбрасываем все padding */
}
.process-list.steps li::before { 
    counter-increment: step; 
    content: counter(step); 
    position: static !important; /* вместо absolute из базовых стилей */
    display: inline-flex !important; 
    align-items: center; 
    justify-content: center; 
    width: 28px; 
    height: 28px; 
    border-radius: 9999px; 
    background: #6D78FF; 
    color: #fff; 
    font-size: 14px; 
    line-height: 1; 
    font-weight: 700; 
    left: auto !important; /* сбрасываем absolute позиционирование */
    top: auto !important;
}
.process-list.steps li::after { 
    content: ""; 
    position: absolute; 
    left: 13px; 
    top: 28px; 
    bottom: -14px; 
    width: 2px; 
    background: #e5e7eb;
}
.process-list.steps li:last-child::after { display: none; }

