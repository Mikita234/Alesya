<script>
// Неразрывные пробелы после коротких предлогов и союзов (1–2 символа)
document.addEventListener('DOMContentLoaded', function(){
    const selectors = [
        '.hero-content p',
        '.service-format p',
        '.section p',
        '.payment-main p'
    ];
    const rx = /(^|\s)([А-Яа-яA-Za-z]{1,2})\s+(?=\S)/g;
    document.querySelectorAll(selectors.join(', ')).forEach((el) => {
        // NBSP после коротких предлогов/союзов и склейка "то, что"
        let html = el.innerHTML.replace(rx, (m, p1, p2) => `${p1}${p2}&nbsp;`);
        // частные случаи
        html = html.replace(/\sв\s+(?=проблемы)/gi, '&nbsp;в ');
        html = html.replace(/часть\s+терапии/gi, 'часть&nbsp;терапии');
        html = html.replace(/то,\s+что/gi, 'то,&nbsp;что');
        el.innerHTML = html;
    });
});

// Точное визуальное выравнивание геро-фото по началу подзаголовка
document.addEventListener('DOMContentLoaded', function(){
    const subtitle = document.querySelector('.hero .subtitle');
    const photo = document.querySelector('.hero-photo');
    if (!(subtitle instanceof HTMLElement) || !(photo instanceof HTMLElement)) return;
    const adjust = () => {
        // На мобильных и планшетах не смещаем вручную
        if (window.innerWidth < 1024) {
            photo.style.marginTop = '0px';
            return;
        }
        const subtitleTop = subtitle.getBoundingClientRect().top + window.scrollY;
        const heroTop = photo.parentElement ? photo.parentElement.getBoundingClientRect().top + window.scrollY : 0;
        // небольшая визуальная дельта для точного совпадения линий базиса
        const delta = Math.max(0, subtitleTop - heroTop + 2);
        photo.style.marginTop = `${Math.round(delta)}px`;
    };
    adjust();
    window.addEventListener('resize', adjust);
});

// Валидация в реальном времени
function validateAmount(value: string) {
    const wrapper = document.getElementById('amount-input-wrapper');
    const message = document.getElementById('validation-message');
    const amount = parseFloat(value);
    
    if (!wrapper || !message) return true;
    
    wrapper.classList.remove('error', 'success');
    message.classList.remove('error', 'success');
    message.textContent = '';
    
    if (!value || value === '') {
        return false;
    }
    
    if (isNaN(amount) || amount < 1) {
        wrapper.classList.add('error');
        message.classList.add('error');
        message.textContent = 'Минимальная сумма: 1 BYN';
        return false;
    }
    
    if (amount > 10000) {
        wrapper.classList.add('error');
        message.classList.add('error');
        message.textContent = 'Максимальная сумма: 10000 BYN';
        return false;
    }
    
    wrapper.classList.add('success');
    message.classList.add('success');
    message.textContent = '✓ Сумма корректна';
    return true;
}

async function submitHomePayment(event: Event){
    event.preventDefault();
    const input = document.getElementById('amount-input') as HTMLInputElement;
    const loadingOverlay = document.getElementById('loading-overlay');
    
    if(!input) return;
    const amount = parseFloat(input.value);
    
    if(!validateAmount(input.value)){
        return;
    }

    // Показываем индикатор загрузки
    if (loadingOverlay) {
        loadingOverlay.classList.add('active');
    }

    try{
        const res = await fetch('/api/register-order',{
            method:'POST',
            headers:{'Content-Type':'application/json'},
            body: JSON.stringify({ amount, orderNumber: 'ORDER_'+Date.now() })
        });
        const data = await res.json();
        if(!res.ok || !data?.success){
            throw new Error(data?.error || `HTTP ${res.status}`);
        }
        window.location.href = data.formUrl;
    }catch(err){
        // Скрываем индикатор загрузки
        if (loadingOverlay) {
            loadingOverlay.classList.remove('active');
        }
        alert(`Ошибка: ${err instanceof Error ? err.message : 'Неизвестная ошибка'}`);
    }
}

document.addEventListener('DOMContentLoaded', function() {
    const quickButtons = document.querySelectorAll('.btn-quick');
    const amountInput = document.getElementById('amount-input') as HTMLInputElement;
    const form = document.getElementById('home-payment-form');
    
    if(form){ form.addEventListener('submit', submitHomePayment); }
    
    // Валидация в реальном времени
    if (amountInput) {
        amountInput.addEventListener('input', function() {
            validateAmount(this.value);
        });
        
        amountInput.addEventListener('blur', function() {
            validateAmount(this.value);
        });
    }
    
    // Обработка статусов оплаты
    const urlParams = new URLSearchParams(window.location.search);
    const status = urlParams.get('status');
    
    if (status === 'success') {
        setTimeout(() => {
            alert('✅ Оплата прошла успешно!\n\nСвяжитесь с @alesiatakun в Telegram для выбора времени консультации.');
        }, 500);
    } else if (status === 'cancel') {
        setTimeout(() => {
            alert('❌ Оплата была отменена.\n\nЕсли у вас возникли вопросы, свяжитесь с @alesiatakun в Telegram.');
        }, 500);
    }
    
    // Быстрые кнопки сумм
    if (quickButtons.length > 0 && amountInput) {
        quickButtons.forEach(button => {
            button.addEventListener('click', function(this: HTMLButtonElement) {
                const amount = this.getAttribute('data-amount');
                if (amountInput && amount) {
                    amountInput.value = amount;
                    validateAmount(amount);
                }
                
                quickButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
            });
        });
    }
    
    // Reveal анимация при скролле
    const revealElements = document.querySelectorAll('.reveal');
    const revealObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('active');
                revealObserver.unobserve(entry.target);
            }
        });
    }, {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    });
    
    revealElements.forEach(el => revealObserver.observe(el));
    // Триггерим перерасчет после первичного появления, чтобы выровнять геро-фото
    setTimeout(() => window.dispatchEvent(new Event('resize')), 300);
    
    // Скрытие floating кнопки при скролле вниз
    let lastScroll = 0;
    const floatingCta = document.querySelector('.floating-cta') as HTMLElement;
    
    if (floatingCta) {
        window.addEventListener('scroll', () => {
            const currentScroll = window.pageYOffset;
            
            if (currentScroll > 300) {
                floatingCta.style.display = 'block';
                
                if (currentScroll > lastScroll) {
                    floatingCta.style.transform = 'translate(-50%, 100px)';
                } else {
                    floatingCta.style.transform = 'translateX(-50%)';
                }
            } else {
                floatingCta.style.display = 'none';
            }
            
            lastScroll = currentScroll;
        });
    }
});
</script>

